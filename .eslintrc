{
  "parser": "typescript-eslint-parser",
  "plugins": [
    "react",
    "standard",
    "typescript",
    "prettier"
  ],
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "prettier",
    "prettier/react",
    "prettier/standard"
  ],
  "parserOptions": {
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "rules": {
    "no-undef": "warn",
    "no-unused-vars": "warn",
    "typescript/no-use-before-define": "warn",
    "typescript/no-unused-vars": "warn",
    "prettier/prettier": [
      "error",
      {
        "parser": "typescript",
        "semi": true,
        "singleQuote": true,
        "tabWidth": 4,
        "trailingComma": "all"
      }
    ]
  }
}
